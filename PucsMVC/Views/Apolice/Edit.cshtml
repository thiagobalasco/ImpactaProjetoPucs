                    </div>
                    <div class="form-group">
                        <label asp-for="DataInicioVigencia"></label>
                        <kendo-datetimepicker for="DataInicioVigencia" style="width:100%"/>
                        <span asp-validation-for="DataInicioVigencia" class="text-danger k-invalid-msg" data-for="DataInicioVigencia"></span>
                    </div>
