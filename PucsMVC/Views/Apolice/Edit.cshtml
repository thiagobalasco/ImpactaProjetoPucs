                    </div>
                    <div class="form-group">
                        <label asp-for="ClienteId" class="control-label"></label>
                        <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
                        <span asp-validation-for="ClienteId" class="text-danger"></span>
                        
                    </div>
                    <div class="form-group">
                        <label asp-for="ModeloId" class="control-label"></label>
                        <select asp-for="ModeloId" class="form-control" asp-items="ViewBag.ModeloId"></select>
                        <span asp-validation-for="ModeloId" class="text-danger"></span>
                        
                    </div>
                    <input type="hidden" asp-for="Id" />
<div class="form-group text-right">
    <a asp-action="Index" class="k-button" style="margin-right:10px"><span class="k-icon k-i-cancel"></span>&nbsp;Cancel</a>
